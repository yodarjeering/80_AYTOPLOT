<Window
    x:Class="AutoPlot.Views.ImagePathDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="画像パス入力"
    Height="200"
    Width="500"
    AllowDrop="True"
    DragOver="Dialog_DragOver"
    Drop="Dialog_Drop"
    WindowStartupLocation="CenterScreen">
     


    <StackPanel Margin="15" Width="450">
        <TextBlock Text="画像ファイルのパスを入力して下さい:" FontSize="14" Margin="0,0,0,8"/>
        
        <TextBox x:Name="PathTextBox"
                 Width="420"
                 Height="40"/>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="OK"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Width="100"
                    Click="Ok_Click"
                    IsDefault="True"/>
            <Button Content="キャンセル"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Width="100"
                    Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>

</Window>
