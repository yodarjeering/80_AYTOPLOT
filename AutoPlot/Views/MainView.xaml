<Window
    x:Class="AutoPlot.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AutoPlot.ViewModels"
    mc:Ignorable="d"
    Title="AutoPlot 画像読み取り"
    Height="600" Width="900">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>


    <!-- <StackPanel Margin="10">
        <TextBox Text="{Binding ImagePath}" Width="300" />
        <Button Content="読み取る" Command="{Binding LoadImageCommand}" />
        <TextBox Text="{Binding ResultText}" Height="200" AcceptsReturn="True" />
    </StackPanel> -->

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 上部パス入力領域 -->
            <RowDefinition Height="*"/>     <!-- メイン領域 -->
        </Grid.RowDefinitions>

        <!-- 上部: パス入力 & ボタン -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="ImagePathTextBox"
                Text="{Binding ImagePath}"
                Width="500"
                VerticalAlignment="Center"
                Margin="0,0,10,0"
                AllowDrop="True"
                PreviewDragOver="ImagePathTextBox_PreviewDragOver"
                Drop="ImagePathTextBox_Drop"
            />

            <Button Content="パス決定" Command="{Binding LoadImageCommand}" Width="100" />
        </StackPanel>

        <!-- メイン領域: 左 画像, 右 グラフ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 左: 入力された画像 -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                <Image x:Name="InputImageDisplay"
                       Stretch="Uniform"
                       Source="{Binding InputBitmap}" />
            </Border>

            <!-- 右: 読み取った数値をグラフ化した画像（仮 Image） -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5,0,0,0">
                <Image x:Name="GraphDisplay"
                       Stretch="Uniform"
                       Source="{Binding GraphBitmap}" />
            </Border>
        </Grid>
    </Grid>
</Window>





