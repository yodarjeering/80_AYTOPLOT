<Window x:Class="AutoPlot.Views.AxisCalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="軸キャリブレーション"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- X axis -->
        <GroupBox Header="X軸" Margin="0,0,0,8">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Min:" Width="40" VerticalAlignment="Center"/>
                    <TextBox Width="100" Text="{Binding XMin}"/>
                    <TextBlock Text="Max:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Width="100" Text="{Binding XMax}"/>
                </StackPanel>
                <Border 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="6"
                        BorderBrush="#555"
                        Background="#F5F5F5">
                    <CheckBox
                        Content=": Logスケール"
                        IsChecked="{Binding IsXLog}" />
                </Border>

            </StackPanel>
        </GroupBox>

        <!-- Y axis -->
        <GroupBox Header="Y軸" Grid.Row="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Min:" Width="40" VerticalAlignment="Center"/>
                    <TextBox Width="100" Text="{Binding YMin}" />
                    <TextBlock Text="Max:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBox Width="100" Text="{Binding YMax}"/>
                </StackPanel>
                <Border
                    Padding="6"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="#555"
                    Background="#F5F5F5">

                    <CheckBox
                        Content=": Logスケール"
                        IsChecked="{Binding IsYLog}" />
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="OK"
                    Width="80"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="Ok_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
